<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3.Views.HaberDetayPage"
             Title="Haber Detayı"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Paylaş"
                 Clicked="Share_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <Grid BackgroundColor="{AppThemeBinding Light=#EAEAEA, Dark=Black}"
                  HeightRequest="300">

                <Image x:Name="imgHaber"
                       Aspect="AspectFit"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
            </Grid>

            <VerticalStackLayout Padding="20" Spacing="15">

                <Label x:Name="lblBaslik"
                       FontSize="24"
                       FontAttributes="Bold"
                       LineBreakMode="WordWrap"
                       HorizontalOptions="Fill"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                <HorizontalStackLayout Spacing="10">
                    <Label Text="Cumhuriyet"
                           FontAttributes="Bold"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#CC0000, Dark=#FF4D4D}"/>

                    <Label Text="|"
                           TextColor="{AppThemeBinding Light=#888888, Dark=#555555}"/>

                    <Label x:Name="lblTarih"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#555555, Dark=#AAAAAA}"/>
                </HorizontalStackLayout>

                <BoxView HeightRequest="1"
                         Margin="0,5"
                         Color="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"/>

                <Label x:Name="lblDetay"
                       FontSize="17"
                       LineHeight="1.5"
                       LineBreakMode="WordWrap"
                       HorizontalOptions="Fill"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#E0E0E0}"/>

                <Button Text="Haberin Tamamını Oku ➔"
                        Clicked="OpenBrowser_Clicked"
                        BackgroundColor="{AppThemeBinding Light=#B00000, Dark=#CC0000}"
                        TextColor="White"
                        CornerRadius="25"
                        Margin="0,20,0,30"
                        HeightRequest="55"
                        FontAttributes="Bold"
                        FontSize="16"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
