<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3.Views.KurlarPage"
             Title="Güncel Kurlar"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0"
              ColumnDefinitions="*,*,*,*"
              Padding="15"
              BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}">

            <Label Text="Birim"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>

            <Label Text="Alış"
                   Grid.Column="1"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>

            <Label Text="Satış"
                   Grid.Column="2"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>

            <Label Text="Fark"
                   Grid.Column="3"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>

            <BoxView HeightRequest="1"
                     VerticalOptions="End"
                     Grid.ColumnSpan="4"
                     Color="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"/>
        </Grid>

        <CollectionView x:Name="cvKurlar"
                        Grid.Row="1">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*,*,*"
                          Padding="15"
                          BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

                        <Label Text="{Binding Name}"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                        <Label Text="{Binding Alis}"
                               Grid.Column="1"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#E0E0E0}"/>

                        <Label Text="{Binding Satis}"
                               Grid.Column="2"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#E0E0E0}"/>

                        <Label Text="{Binding Degisim}"
                               Grid.Column="3"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="{Binding Renk}"/>

                        <BoxView HeightRequest="1"
                                 VerticalOptions="End"
                                 Grid.ColumnSpan="4"
                                 Color="{AppThemeBinding Light=#DDDDDD, Dark=#252525}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator x:Name="loading"
                           Grid.Row="1"
                           IsRunning="False"
                           IsVisible="False"
                           HeightRequest="50"
                           WidthRequest="50"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Color="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>
    </Grid>
</ContentPage>
