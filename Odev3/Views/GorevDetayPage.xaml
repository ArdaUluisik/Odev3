<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev3.Views.GorevDetayPage"
             Title="Görev Detayı"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            
            <Label Text="Görev Bilgileri"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>

            
            <Frame Padding="10"
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">

                <Entry x:Name="entBaslik"
                       Placeholder="Görev Başlığı (Örn: Ödev Yap)"
                       PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       FontAttributes="Bold"/>
            </Frame>

            
            <Frame Padding="10"
                   CornerRadius="10"
                   HeightRequest="150"
                   BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">

                <Editor x:Name="edtDetay"
                        Placeholder="Detayları buraya yaz..."
                        PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        AutoSize="TextChanges"/>
            </Frame>

            
            <Label Text="Tarih ve Saat Seçimi"
                   FontSize="14"
                   Margin="0,10,0,0"
                   TextColor="{AppThemeBinding Light=#555555, Dark=#AAAAAA}"/>

            <HorizontalStackLayout Spacing="10">
                <DatePicker x:Name="dpTarih"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                <TimePicker x:Name="tpSaat"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
            </HorizontalStackLayout>

            <Button Text="KAYDET"
                    Clicked="BtnKaydet_Clicked"
                    BackgroundColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                    TextColor="{AppThemeBinding Light=White, Dark=#121212}"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    HeightRequest="50"
                    Margin="0,20,0,0"/>

            <Button Text="İptal"
                    Clicked="BtnIptal_Clicked"
                    BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    CornerRadius="20"/>

            <ActivityIndicator x:Name="loading"
                               IsRunning="False"
                               IsVisible="False"
                               Color="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
